<h2 class="page-header">Builing Setup</h2>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-6">
    {{#if building}}
     <form method="post" action="/buildings/building/{{building._id}}">
    {{else}}
    <form method="post" action="/buildings/building">
    {{/if}}
      <div class="form-group">
        <label>Building Name</label>
        <input type="text" class="form-control" placeholder="Building Name" name="bname" value="{{building.name}}" required>
      </div>
      <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Address" name="baddress" value="{{building.address}}" required>
      </div>
      <div class="form-group">
        <label>Floors</label>
        <input type="number" class="form-control" placeholder="Number of Floors" name="bfloornumber" value="{{building.floors}}" >
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
      <button type="reset" class="btn btn-danger">Reset</button>
    </form>
  </div>
</div>
